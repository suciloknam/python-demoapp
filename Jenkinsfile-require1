pipeline {
    agent any

    stages {
        stage('Check Environment') {
            steps {
                sh 'env'
            }
        }
        
        stage('Python Version') {
            steps {
                sh "sudo  apt update"
                sh "sudo  apt -y upgrade"
                sh "sudo  apt install python3.8-venv -y"
                sh "sudo  python3 -v"
                
            }
        }
        
        stage('Docker version') {
            steps {
                sh "docker -v"
            }
        }
        
        stage('Install Make') {
            steps {
                sh "sudo apt install make -y"
                sh "sudo apt install make-guile -y"
            }
        }
    }
}
